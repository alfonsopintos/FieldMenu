<!-- Grid system for info and field gallery -->
<div class="logo_sections">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <p>
          <strong>Field Location:</strong> <%= @field.client.name %>
        </p>
        <p>
          <strong>Maximum Number of People Allowed:</strong> <%= @field.max_people %>
        </p>
        <p>
          <strong>Price Per Hour:</strong> <%= @field.price %>
        </p>
        <%= link_to 'Edit', edit_field_path(@field) %> |
        <%= link_to 'Back', fields_path %>
      </div>
      <div class="col-md-6">
        <%= image_tag @field.avatar.url(:medium) %>
      </div>
    </div>
  </div>
</div>
<hr>
<!-- End of client grid -->


<div class="text-center">
  <h2> Available Bookings </h2>
  <p> Press 'Book' to begin Booking Process </p>
</div>
  <table>
    <thead>
      <tr>
        <th>Start time</th>
        <th>End time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @slots.each do |slot| %>
      <% if slot.field_id == @field.id %>
        <tr>
          <td><%= slot.start_time %></td>
          <td><%= slot.end_time %></td>
          <td><%= link_to 'Show', slot %></td>
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
