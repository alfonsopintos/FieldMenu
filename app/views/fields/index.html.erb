<h1>Pick a Field</h1>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Max people</th>
      <th>Price Per Hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.client.name %></td>
        <td>|<%= field.max_people %>|</td>
        <td>|<%= field.price %>|</td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Field', new_field_path %>
