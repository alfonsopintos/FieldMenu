<div class="fieldshow">
  <p> <%= @client.name %> </p>

  <p> <%= @client.address %> </p>

  <p> <%= @client.phone_number %> </p>

  <p>
    <strong>Hour of Operation:</strong>
    <%= @client.open_time %> - <%= @client.close_time %>
  </p>
  <hr>
  <%= image_tag @client.avatar.url(:medium) %>
  <hr>

</div>


<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>


<h2 class="text-center"> Available Fields </h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Maximum Number of Players</th>
      <th>Price Per Hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
    <% if field.client_id == @client.id %>
      <tr onclick='location.href="<%= field_path(field) %>"'>
        <td><%= field.max_people %></td>
        <td><%= field.price %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
