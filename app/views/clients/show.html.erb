<p> <%= @client.name %> </p>

<p> <%= @client.address %> </p>

<p> <%= @client.phone_number %> </p>

<p>
  <strong>Hour of Operation:</strong>
  <%= @client.open_time %> - <%= @client.close_time %>
</p>


<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>
<hr>
<%= image_tag @client.avatar.url(:medium) %>
<hr>

<h2> Fields </h2>
<table>
  <thead>
    <tr>
      <th>Occupancy</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
    <% if field.client_id == @client.id %>
      <tr>
        <td><%= field.max_people %></td>
        <td><%= field.price %></td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<hr>

<h2> Add a Field </h2>
<%= render "fields/form" %>
